<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.supatbaingam.ornamentalfishautosystem.fragment.ReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btn_reportwater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="รายงานการเปลี่ยนน้ำ"
            android:layout_marginBottom="60dp"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/btn_reportfood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="รายงานการให้อาหาร"
            android:textSize="30dp"/>
    </LinearLayout>

</FrameLayout>
